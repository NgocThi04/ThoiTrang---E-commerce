@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin | TTNT Fashion</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/AdminDashboard.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
           
        }
        .sidebar {
            min-height: 100vh;
            background: #E6E6E6;
            padding-top: 1rem;
        }
        .sidebar a {
            color:black;
            text-decoration: none;
            display: block;
            padding: 0.75rem 1.5rem;
            border-radius: 0.3rem;
            margin-bottom: 0.5rem;
            transition: background 0.2s;
        }
        .sidebar a.active, .sidebar a:hover {
            background: black;
            color:white;
        }
        .sidebar .sidebar-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 2rem;
            text-align: center;
        }
        .admin-header {
            background: #fff;
            border-bottom: 1px solid black;
            padding: 16px 0px;
            margin-bottom: 2rem;
        }

        .admin-header h4{
            font-weight:bold;
            font-size:24px;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 sidebar d-flex flex-column">
                <div class="sidebar-title mb-4">TTNT Admin</div>
                <a href="@Url.Action("Dashboard", "Admin")" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"><i class="bi bi-speedometer2"></i> Dashboard</a>
                <a href="@Url.Action("ProductList", "Admin")" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "ProductList" || ViewContext.RouteData.Values["action"]?.ToString() == "AddProduct" || ViewContext.RouteData.Values["action"]?.ToString() == "EditProduct" ? "active" : "")"><i class="bi bi-box-seam"></i> Quản lý sản phẩm</a>
                <a href="@Url.Action("CategoryList", "Admin")" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "CategoryList" || ViewContext.RouteData.Values["action"]?.ToString() == "AddCategory" || ViewContext.RouteData.Values["action"]?.ToString() == "EditCategory" ? "active" : "")"><i class="bi bi-tags"></i> Quản lý danh mục</a>
                <a href="@Url.Action("OrderList", "Admin")" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "OrderList" ? "active" : "")"><i class="bi bi-receipt"></i> Quản lý đơn hàng</a>
                <a href="@Url.Action("UserList", "Admin")" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "UserList" || ViewContext.RouteData.Values["action"]?.ToString() == "EditUser" || ViewContext.RouteData.Values["action"]?.ToString() == "AddUser" ? "active" : "")"><i class="bi bi-people"></i> Quản lý người dùng</a>
                <a href="@Url.Action("ContactList", "Admin")" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "ContactList" || ViewContext.RouteData.Values["action"]?.ToString() == "ContactDetail" ? "active" : "")"><i class="bi bi-envelope"></i> Quản lý liên hệ</a>
                <div class="mt-auto"></div>
            </nav>
            <main class="col-md-10 ms-sm-auto px-4">
                <div class="admin-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-2 fs-4"></i>
                            <strong>Xin chào, @User.Identity?.Name</strong>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end text-small shadow" aria-labelledby="dropdownUser">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Home")"><i class="bi bi-house me-2"></i> Giao diện người dùng</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ChangePassword", "Account")"><i class="bi bi-key me-2"></i> Đổi mật khẩu</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i> Đăng xuất</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html> 