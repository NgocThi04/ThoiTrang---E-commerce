@model List<Fashion.ViewModels.AdminCategoryListViewModel>
@{
    ViewData["Title"] = "Quản lý Danh mục";
    Layout = "_AdminLayout";
}

<div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><i class="bi bi-tags me-2"></i>Quản lý Danh mục</h3>
        <a asp-action="AddCategory" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Thêm Danh mục</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Tên Danh mục</th>
                        <th>Số lượng sản phẩm</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Ten</td>
                            <td>@category.ProductCount</td>
                            <td class="text-end">
                                <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <form asp-action="DeleteCategory" asp-route-id="@category.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa danh mục này không?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 