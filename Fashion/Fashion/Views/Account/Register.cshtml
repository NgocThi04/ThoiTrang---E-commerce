@model Fashion.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

<style>
    body {
        font-family: 'Inter';
    }
    .form-container {
        background: white;
        padding: 40px;
        border-radius:10px;
        border: 1px solid #DEDFE1;
        max-width: 400px;
        margin: 40px auto;
        font-family: 'Inter';
    }

    .form-title {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        text-align: center;
        margin-bottom: 32px;
    }

    .form-control {
        border-radius: 150px;
        padding: 10px 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .input-wrapper {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        cursor: pointer;
        color: #6c757d;
        font-size: 20px;
        padding: 4px;
    }

    .submit-btn {
        background-color: #222; 
        color: white;
        border: none;
        border-radius: 150px;
        padding: 12px 24px;
        font-weight: 600;
        font-size: 16px;
        text-align: center;
        transition: background-color 0.3s ease;
    }

        .submit-btn:hover {
            background-color: #000;
            color: white;
        }

</style>

<div class="form-container">
    <h1 class="form-title">Đăng ký</h1>
    <form asp-action="Register" method="post" autocomplete="off">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label class="form-label" asp-for="TenDangNhap"></label>
            <input asp-for="TenDangNhap" class="form-input form-control" placeholder="Tên đăng nhập" />
            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="MatKhau"></label>
            <div class="input-wrapper">
                <input asp-for="MatKhau" class="form-input form-control" placeholder="Mật khẩu" type="password" id="password" />
                <button type="button" class="password-toggle" onclick="togglePassword('password')">
                    <i class="bi bi-eye" id="icon-password"></i>
                </button>
            </div>
            <span asp-validation-for="MatKhau" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="XacNhanMatKhau"></label>
            <div class="input-wrapper">
                <input asp-for="XacNhanMatKhau" class="form-input form-control" placeholder="Nhập lại mật khẩu" type="password" id="confirmPassword" />
                <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword')">
                    <i class="bi bi-eye" id="icon-confirmPassword"></i>
                </button>
            </div>
            <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="HoTen"></label>
            <input asp-for="HoTen" class="form-input form-control" placeholder="Họ tên" />
            <span asp-validation-for="HoTen" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Email"></label>
            <input asp-for="Email" class="form-input form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="SoDienThoai"></label>
            <input asp-for="SoDienThoai" class="form-input form-control" placeholder="Số điện thoại" />
            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
        </div>

        <button type="submit" class="submit-btn w-100 mt-2">Tạo Tài Khoản</button>
    </form>
</div>

@section Scripts {
    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById('icon-' + inputId);
            if (input.type === 'password') {
                input.type = 'text';
                icon?.classList.replace('bi-eye', 'bi-eye-slash');
            } else {
                input.type = 'password';
                icon?.classList.replace('bi-eye-slash', 'bi-eye');
            }
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}
